<phone:PhoneApplicationPage 
    x:Class="VK_Metro.Views.SearchFriends"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Converters="clr-namespace:WP7Contrib.View.Controls.Converters;assembly=WP7Contrib.View.Controls"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="Portrait" Orientation="Portrait"
    mc:Ignorable="d" d:DesignHeight="768" d:DesignWidth="480"
    shell:SystemTray.IsVisible="True">
    <phone:PhoneApplicationPage.Resources>
        <Converters:BooleanToVisibilityConverter x:Key="bvc" />
    </phone:PhoneApplicationPage.Resources>
    
    <!--LayoutRoot представляет корневую сетку, где размещается все содержимое страницы-->
    <Grid x:Name="LayoutRoot" Background="Transparent">
    
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--TitlePanel содержит имя приложения и заголовок страницы-->
        <StackPanel x:Name="TitlePanel" Grid.Row="0" Margin="12,17,0,28" VerticalAlignment="Stretch">
            <StackPanel.Resources>
                <DataTemplate x:Key="friendsData">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid Margin="12,12,0,0" Grid.Column="0" Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Image Grid.Column="0" Grid.Row="0" Width="80" Height="80" Source="{Binding photo}" HorizontalAlignment="Left" VerticalAlignment="Center" Stretch="Uniform"/>
                            <TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding first_name}" TextWrapping="NoWrap" Style="{StaticResource PhoneTextExtraLargeStyle}" FontSize="34" />
                            <Ellipse Grid.Column="2" Grid.Row="0" Fill="#FFB8B8B8" Width="10" Height="10" Visibility="{Binding Online, Converter={StaticResource bvc}}" 
                                 HorizontalAlignment="Right"/>
                        </Grid>
                    </Grid>
                </DataTemplate>
            </StackPanel.Resources>
            <TextBox x:Name="SearchFriendBox" KeyUp="SearchFriendBox_KeyUp"></TextBox>
            <ScrollViewer Margin="0,20,0,0" VerticalContentAlignment="Stretch" VerticalAlignment="Stretch">
                <StackPanel Orientation="Vertical" VerticalAlignment="Stretch">
                    <TextBlock x:Name="SearchEmptyText"
                               TextWrapping="Wrap"
                               FontSize="30"
                               VerticalAlignment="Stretch"
                               Visibility="{Binding DataContext.EmptyTextVisibility, ElementName=LayoutRoot}">Вы можете искать среди Ваших контактов и друзей</TextBlock>
                    <ListBox
                            ScrollViewer.VerticalScrollBarVisibility="Disabled"
                            VerticalContentAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            x:Name="FriendsList" ItemsSource="{Binding Path=VKFriends}"
                            ItemTemplate="{StaticResource friendsData}"
                            ItemContainerStyle="{StaticResource ListBoxItemStyleStretch}"
                            Tap="FriendsList_Tap">
                    </ListBox>
                </StackPanel>
            </ScrollViewer>
        </StackPanel>

        <!--ContentPanel – поместите здесь дополнительное содержимое-->
        <Grid x:Name="ContentPanel" Margin="12,123,12,0" Grid.RowSpan="2"></Grid>
    </Grid>
 
    <!--Пример кода, иллюстрирующий использование ApplicationBar-->
