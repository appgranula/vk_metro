        </ListBox>
        </Grid>
        <!--<VisibilityToBooleanConverter></VisibilityToBooleanConverter>-->
        <WPExtensions:AdvancedApplicationBar x:Name="bar" IsVisible="True" IsMenuEnabled="True">
            <WPExtensions:AdvancedApplicationBarIconButton Text="прикрепить снимок" IconUri="/icons/appbar.feature.camera.rest.png"/>
            <WPExtensions:AdvancedApplicationBarIconButton Text="прикрепить  карту" IconUri="/icons/appbar.checkin.rest.png"/>
